{
  "manifest_version": 2,
  "name": "SiteRay - Website Trust Scores",
  "version": "1.0.0",
  "description": "See trust scores for any website at a glance. Powered by SiteRay.",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "https://api.siteray.eu/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "48": "icons/icon-gray-48.png",
      "128": "icons/icon-gray-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-gray-16.png",
    "48": "icons/icon-gray-48.png",
    "128": "icons/icon-gray-128.png"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "siteray-extension@siteray.eu",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["browsingActivity"],
        "optional": []
      }
    }
  }
}
