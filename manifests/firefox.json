{
  "manifest_version": 2,
  "name": "SiteRay - Website Trust Scores",
  "version": "1.0.0",
  "description": "See trust scores for any website at a glance. Powered by SiteRay.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://siteray.eu/*",
    "http://localhost:3001/*",
    "http://10.0.2.2:3001/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "48": "icons/icon-gray-48.png",
      "128": "icons/icon-gray-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-gray-16.png",
    "48": "icons/icon-gray-48.png",
    "128": "icons/icon-gray-128.png"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@siteray.eu",
      "strict_min_version": "109.0"
    }
  }
}
