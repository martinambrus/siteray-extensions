{
  "manifest_version": 3,
  "name": "SiteRay - Website Reputation",
  "version": "1.0.0",
  "description": "View SiteRay reputation data for websites you visit.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://api.siteray.eu/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "48": "icons/icon-gray-48.png",
      "128": "icons/icon-gray-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-gray-16.png",
    "48": "icons/icon-gray-48.png",
    "128": "icons/icon-gray-128.png"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
