{
  "name": "siteray-extension",
  "version": "1.0.0",
  "description": "SiteRay browser extension - website trust scores at a glance",
  "private": true,
  "scripts": {
    "build": "node build/build.js",
    "build:chrome": "node build/build.js --target=chrome",
    "build:firefox": "node build/build.js --target=firefox",
    "watch": "node build/build.js --watch",
    "watch:chrome": "node build/build.js --target=chrome --watch",
    "watch:firefox": "node build/build.js --target=firefox --watch",
    "clean": "rm -rf dist/chrome dist/firefox"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0",
    "@types/webextension-polyfill": "^0.12.0"
  },
  "dependencies": {
    "preact": "^10.25.0",
    "webextension-polyfill": "^0.12.0"
  }
}
